    <!--  *********************************  PercentageThumb Style  *********************************  -->
    <Style x:Key="PercentageThumbStyle" TargetType="Thumb">
        <Setter Property="Height" Value="11" />
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Grid Width="4" Height="11">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0" Storyboard.TargetName="hover" Storyboard.TargetProperty="(UIElement.Opacity)" To="1" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0" Storyboard.TargetName="pressed" Storyboard.TargetProperty="(UIElement.Opacity)" To="1" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0" Storyboard.TargetName="disabled" Storyboard.TargetProperty="(UIElement.Opacity)" To="0.55" />
                                        <DoubleAnimation d:IsOptimized="True" Duration="0" Storyboard.TargetName="ThumbTip" Storyboard.TargetProperty="(UIElement.Opacity)" To="0.55" />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="FocusStates">
                                <VisualState x:Name="Focused">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0" Storyboard.TargetName="focused" Storyboard.TargetProperty="(UIElement.Opacity)" To="1" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Unfocused" />
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Rectangle Fill="{StaticResource TransparentBrush}" />
                        <Grid Margin="-5,0,-5,0">
                            <Canvas Width="10" Height="10">
                                <Ellipse x:Name="normal" Width="10" Height="10" Fill="{StaticResource SliderThumbBackgroundBrush}" />
                                <Ellipse x:Name="hover"
                                         Width="10"
                                         Height="10"
                                         Fill="{StaticResource SliderThumbHoverBackgroundBrush}"
                                         Opacity="0" />
                                <Ellipse x:Name="pressed"
                                         Width="10"
                                         Height="10"
                                         Fill="{StaticResource SliderThumbPressedBackgroundBrush}"
                                         Opacity="0" />
                                <Ellipse x:Name="disabled"
                                         Width="10"
                                         Height="10"
                                         Fill="{StaticResource SliderThumbDisabledBackgroundBrush}"
                                         Opacity="0" />
                                <Ellipse x:Name="focused"
                                         Width="10"
                                         Height="10"
                                         Opacity="0"
                                         Stroke="{StaticResource SliderThumbFocusedBorderBrush}" />
                                <!--  Zoom Level POrcentage Tooltip  -->
                                <Grid x:Name="ThumbTip"
                                      Canvas.Left="-16"
                                      Canvas.Top="-30"
                                      Height="29"
                                      HorizontalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="6" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="6" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="21" />
                                        <RowDefinition Height="6" />
                                    </Grid.RowDefinitions>
                                    <Rectangle Grid.ColumnSpan="3" Margin="-1" Stroke="{StaticResource ThumbTooltipBorderBrush}" StrokeThickness="{StaticResource DefaultStrokeThickness}" />
                                    <Rectangle Grid.Column="0" Fill="{StaticResource ThumbTooltipBackgroundBrush}" />
                                    <Rectangle Grid.Column="1" Fill="{StaticResource ThumbTooltipBackgroundBrush}" />
                                    <StackPanel Grid.Column="1" Margin="0,1,0,0" VerticalAlignment="Center" Orientation="Horizontal">
                                        <TextBlock x:Name="textBlock"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontFamily="Segoe UI"
                                                   FontSize="12"
                                                   Foreground="{StaticResource ForegroundBrush}"
                                                   Text="{Binding ZoomLevelDisplayText}"
                                                   TextWrapping="NoWrap" />
                                        <TextBlock HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontFamily="Segoe UI"
                                                   FontSize="12"
                                                   Foreground="{StaticResource ForegroundBrush}"
                                                   Text="%"
                                                   TextWrapping="NoWrap" />
                                    </StackPanel>
                                    <Rectangle Grid.Column="2" Fill="{StaticResource ThumbTooltipBackgroundBrush}" />
                                    <Path Grid.Row="1"
                                          Grid.Column="1"
                                          Width="10"
                                          Height="6"
                                          Margin="10,-1,0,0"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Top"
                                          Data="M22.804562,18 L22.613688,18.159668 C20.847961,19.636719 18.0228,22 18.0228,22 C18.0228,22 15.176086,19.636719 13.39689,18.159668 L13.20456,18 z"
                                          Fill="{StaticResource ThumbTooltipBackgroundBrush}"
                                          Stretch="Fill"
                                          Stroke="{StaticResource ThumbTooltipBorderBrush}"
                                          UseLayoutRounding="True" />
                                    <Rectangle Grid.Row="1"
                                               Grid.Column="1"
                                               Width="34"
                                               Height="2"
                                               Margin="0,-2,0,0"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Top"
                                               Fill="{StaticResource ThumbTooltipBackgroundBrush}" />
                                </Grid>
                            </Canvas>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Width" Value="4" />
    </Style>

    <!--  *********************************  PercentageSlider Style  *********************************  -->
    <Style x:Key="PercentageSliderStyle" TargetType="Slider">
        <Setter Property="Background" Value="{StaticResource TransparentBrush}" />
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}" />
        <Setter Property="Stylus.IsPressAndHoldEnabled" Value="false" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Slider">
                    <ControlTemplate.Resources>
                        <ControlTemplate x:Key="RepeatButtonTemplate">
                            <Grid x:Name="Root" Background="{StaticResource TransparentBrush}" Opacity="0" />
                        </ControlTemplate>
                    </ControlTemplate.Resources>
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="true">
                        <Grid>
                            <Rectangle x:Name="HorizontalTrackRectangleDisabledOverlay"
                                       Grid.Column="0"
                                       Grid.ColumnSpan="3"
                                       Height="2"
                                       Margin="1,0"
                                       Fill="{StaticResource SliderTrackDisabledBackgroundBrush}"
                                       Opacity=".55"
                                       Visibility="Collapsed" />
                            <TickBar x:Name="TopTick"
                                     Grid.Row="0"
                                     Height="4"
                                     Fill="{TemplateBinding Foreground}"
                                     Placement="Top"
                                     Visibility="Collapsed" />
                            <Border x:Name="TrackBackground"
                                    Grid.Row="1"
                                    Height="2"
                                    Margin="1,0"
                                    VerticalAlignment="center"
                                    Background="{StaticResource HSliderTrackBackgroundBrush}">
                                <Canvas>
                                    <Rectangle x:Name="PART_SelectionRange" Canvas.Left="0" Height="1" Fill="{StaticResource TransparentBrush}" />
                                </Canvas>
                            </Border>
                            <Track x:Name="PART_Track" Grid.Row="1">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="{x:Static Slider.DecreaseLarge}" Template="{StaticResource RepeatButtonTemplate}" />
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="{x:Static Slider.IncreaseLarge}" Template="{StaticResource RepeatButtonTemplate}" />
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb" Style="{StaticResource PercentageThumbStyle}" />
                                </Track.Thumb>
                            </Track>
                            <TickBar x:Name="BottomTick"
                                     Grid.Row="2"
                                     Height="4"
                                     Fill="{TemplateBinding Foreground}"
                                     Placement="Bottom"
                                     Visibility="Collapsed" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="TickPlacement" Value="TopLeft">
                            <Setter TargetName="Thumb" Property="Style" Value="{StaticResource PercentageThumbStyle}" />
                            <Setter TargetName="TopTick" Property="Visibility" Value="Visible" />
                            <Setter TargetName="TrackBackground" Property="Margin" Value="5,2,5,0" />
                        </Trigger>
                        <Trigger Property="TickPlacement" Value="BottomRight">
