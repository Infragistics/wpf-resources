    <!--  ********************************** ProgressBar Style **********************************  -->
    <Style x:Key="ProgressBarStyle" TargetType="{x:Type ProgressBar}">
        <Setter Property="Foreground" Value="{StaticResource ProgressBarForegroundBrush}" />
        <Setter Property="Background" Value="{StaticResource ProgressBarBackgroundBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Height" Value="6" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ProgressBar}">
                    <Grid x:Name="TemplateRoot" SnapsToDevicePixels="true">
                        <Rectangle Fill="{TemplateBinding Background}" />
                        <Rectangle x:Name="PART_Track" Margin="1" />
                        <Decorator x:Name="PART_Indicator" HorizontalAlignment="Left">
                            <Grid x:Name="Foreground">
                                <Rectangle x:Name="Indicator" Fill="{TemplateBinding Foreground}" />
                            </Grid>
                        </Decorator>
                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Orientation" Value="Vertical">
                            <Setter TargetName="TemplateRoot" Property="LayoutTransform">
                                <Setter.Value>
                                    <RotateTransform Angle="-90" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsIndeterminate" Value="true">
                            <Setter TargetName="Indicator" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                     </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>  

    <!--  *********************************  DialogButton Style  *********************************  -->
    <Style x:Key="DialogButtonStyle" TargetType="Button">
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid Background="Transparent">
                        <Rectangle Fill="{StaticResource TransparentBrush}" />
                        <ContentPresenter x:Name="contentPresenter"
                                          Margin="{TemplateBinding Padding}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          Content="{TemplateBinding Content}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                          Opacity="0.6" />
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0" Storyboard.TargetName="contentPresenter" Storyboard.TargetProperty="(UIElement.Opacity)" To="1" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0" Storyboard.TargetName="contentPresenter" Storyboard.TargetProperty="(UIElement.Opacity)" To="1" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled" />
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="FocusStates">
                                <VisualState x:Name="Focused" />
                                <VisualState x:Name="Unfocused" />
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  *********************************  TextBlock Style  *********************************  -->
    <Style x:Key="TextBlockStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}" />
        <Setter Property="FontSize" Value="{StaticResource FontSize}" />
        <Setter Property="FontFamily" Value="{StaticResource FontFamily}" />
    </Style>

    <Style x:Key="ProgressDialogTextBlockStyle" BasedOn="{StaticResource TextBlockStyle}" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSize14}" />
        <Setter Property="FontWeight" Value="{StaticResource FontLight}" />
        <Setter Property="HorizontalAlignment" Value="Center" />
         <Setter Property="Margin" Value="0 10" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <Style x:Key="HeaderTextBlockStyle" BasedOn="{StaticResource TextBlockStyle}" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource DialogWindowHeaderForegroundBrush}" />
        <Setter Property="FontWeight" Value="{StaticResource FontSemiBold}" />
    </Style>
    
     <Style x:Key="HiglightedTextBlockStyle" BasedOn="{StaticResource TextBlockStyle}" TargetType="TextBlock">
         <Setter Property="FontWeight" Value="{StaticResource FontSemiBold}" />
    </Style>

    <!--  ********************************** DictionaryLoadProgressDialog Style **********************************  -->
    <Style TargetType="ig:DictionaryLoadProgressDialog">
        <Setter Property="Background" Value="{StaticResource ProgressDialogBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource ProgressDialogBorderBrush}" />
        <Setter Property="BorderThickness" Value="{StaticResource DefaultBorderThickness}" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ig:DictionaryLoadProgressDialog">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}">
                        <StackPanel>
                            <TextBlock Style="{StaticResource ProgressDialogTextBlockStyle}" Text="{Binding Loading}" />
                            <Border>
                                <ContentControl>
                                    <ProgressBar Width="200" Style="{StaticResource ProgressBarStyle}" Value="{TemplateBinding ProgressValue}" />
                                </ContentControl>
                            </Border>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  *********************************  XamSpellCheckerDialogWindow Style  *********************************  -->
    <Style TargetType="ig:XamSpellCheckerDialogWindow">
        <Setter Property="IsEnabled" Value="true" />
        <Setter Property="ModalBackground" Value="{StaticResource DialogWindowModalBackgroundBrush}" />
        <Setter Property="ModalBackgroundOpacity" Value="0.8" />
        <Setter Property="Background" Value="{StaticResource DialogWindowBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource DialogWindowBorderBrush}" />
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}" />
        <Setter Property="BorderThickness" Value="{StaticResource DefaultBorderThickness}" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="VerticalContentAlignment" Value="Top" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="HeaderForeground" Value="{StaticResource ForegroundBrush}" />
        <Setter Property="HeaderBackground" Value="{StaticResource TransparentBrush}" />
        <Setter Property="HeaderVerticalContentAlignment" Value="Center" />
        <Setter Property="MinWidth" Value="70" />
        <Setter Property="MinHeight" Value="30" />
        <Setter Property="MinimizedWidth" Value="100" />
        <Setter Property="Height" Value="424" />
        <Setter Property="Width" Value="424" />
        <Setter Property="IsModal" Value="True" />
        <Setter Property="WindowState" Value="Hidden" />
        <Setter Property="StartupPosition" Value="Center" />
        <Setter Property="HeaderIconTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Path Data="{StaticResource HeaderIcon}" Fill="{StaticResource DialogWindowHeaderIconBackgroundBrush}" Opacity="1" Stretch="Fill" />
                    </Grid>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="igDW:XamDialogWindow">
                    <Grid x:Name="ContainerContext" igPrim:XamlHelper.SnapsToDevicePixels="True">
                        <Grid.Resources>
                            <DataTemplate x:Key="NWCursor">
                                <Grid Width="16" Height="16">
                                    <Grid.RenderTransform>
                                        <TransformGroup>
                                            <TranslateTransform X="-9" />
                                            <TranslateTransform Y="-9" />
                                        </TransformGroup>
                                    </Grid.RenderTransform>
                                    <Path Data="{StaticResource NWCursor}"
                                          Fill="{StaticResource GlyphBackgroundBrush}"
                                          RenderTransformOrigin="0.5,0.5"
                                          Stretch="Uniform"
                                          Stroke="{StaticResource GlyphBorderBrush}"
                                          StrokeThickness="0.6" />
                                </Grid>
                            </DataTemplate>
                            <DataTemplate x:Key="SECursor">
                                <Grid Width="16" Height="16">
                                    <Path Data="{StaticResource SECursor}"
                                          Fill="{StaticResource GlyphBackgroundBrush}"
                                          RenderTransformOrigin="0.5,0.5"
                                          Stretch="Uniform"
                                          Stroke="{StaticResource GlyphBorderBrush}"
                                          StrokeThickness="0.6" />
                                </Grid>
                            </DataTemplate>
                            <DataTemplate x:Key="NECursor">
                                <Grid Width="16" Height="16" RenderTransformOrigin="0.5,0.5">
                                    <Grid.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform />
                                            <SkewTransform AngleX="0" AngleY="0" />
                                            <RotateTransform Angle="90" />
                                            <TranslateTransform X="-9" />
                                            <TranslateTransform Y="-9" />
                                            <TranslateTransform />
                                        </TransformGroup>
                                    </Grid.RenderTransform>
                                    <Path Data="{StaticResource NECursor}"
                                          Fill="{StaticResource GlyphBackgroundBrush}"
                                          RenderTransformOrigin="0.5,0.5"
                                          Stretch="Uniform"
                                          Stroke="{StaticResource GlyphBorderBrush}"
                                          StrokeThickness="0.6" />
                                </Grid>
                            </DataTemplate>
                            <DataTemplate x:Key="SWCursor">
                                <Grid Width="16" Height="16" RenderTransformOrigin="0.5,0.5">
                                    <Grid.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform />
                                            <SkewTransform AngleX="0" AngleY="0" />
                                            <RotateTransform Angle="90" />
                                            <TranslateTransform X="-17" />
                                            <TranslateTransform />
                                        </TransformGroup>
                                    </Grid.RenderTransform>
                                    <Path Data="{StaticResource SWCursor}"
                                          Fill="{StaticResource GlyphBackgroundBrush}"
                                          RenderTransformOrigin="0.5,0.5"
                                          Stretch="Uniform"
                                          Stroke="{StaticResource GlyphBorderBrush}"
                                          StrokeThickness="0.6" />
                                </Grid>
                            </DataTemplate>
                        </Grid.Resources>
                        <igPrim:DialogRootPanel x:Name="Root" IsHitTestVisible="{TemplateBinding IsEnabled}" Visibility="{Binding Visibility, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                            <!--  Borders  -->
                            <Grid x:Name="BorderGrid">
                                <Grid x:Name="ActiveResizeBorderGrid" Margin="0" Background="{x:Null}">
                                    <Border x:Name="ActiveResizeBorder" BorderBrush="{StaticResource DialogWindowActiveResizeBorderBrush}" BorderThickness="1" />
                                </Grid>
                                <Grid x:Name="NoActiveResizeBorderGrid" Margin="0" Background="{x:Null}" Visibility="Collapsed">
                                    <Border x:Name="NoActiveResizeBorder" BorderBrush="{StaticResource DialogWindowNoActiveResizeBorderBrush}" BorderThickness="1" />
                                </Grid>
                            </Grid>
                            <ContentControl x:Name="MaximizedContent"
                                            HorizontalContentAlignment="Stretch"
                                            VerticalContentAlignment="Stretch"
                                            IsEnabled="{TemplateBinding IsEnabled}"
                                            IsTabStop="False"
                                            Visibility="Visible">
                                <Grid Margin="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" MinHeight="36" />
                                        <RowDefinition />
                                        <RowDefinition Height="Auto" MinHeight="42" />
                                    </Grid.RowDefinitions>
                                    <!--  Header  -->
                                    <Border x:Name="HeaderArea" Grid.Column="1" Margin="1,1,1,0" Background="{TemplateBinding HeaderBackground}">
                                        <Grid x:Name="WindowHeader" Margin="5,1,100,0" VerticalAlignment="Center">
                                            <Grid HorizontalAlignment="Stretch">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <ContentControl x:Name="SmallImage"
                                                                Grid.Column="0"
                                                                MinWidth="16"
                                                                MinHeight="16"
                                                                MaxWidth="16"
                                                                MaxHeight="16"
                                                                Margin="5,0,0,0"
                                                                VerticalAlignment="Center"
                                                                ContentTemplate="{TemplateBinding HeaderIconTemplate}"
                                                                IsTabStop="False"
                                                                Visibility="Visible" />
                                                <ContentControl x:Name="HeaderContent"
                                                                Grid.Column="1"
                                                                Margin="5,0,0,0"
                                                                HorizontalAlignment="{TemplateBinding HeaderHorizontalContentAlignment}"
                                                                VerticalAlignment="{TemplateBinding HeaderVerticalContentAlignment}"
                                                                HorizontalContentAlignment="{TemplateBinding HeaderHorizontalContentAlignment}"
                                                                VerticalContentAlignment="{TemplateBinding HeaderVerticalContentAlignment}"
                                                                Content="{TemplateBinding Header}"
                                                                ContentTemplate="{TemplateBinding HeaderTemplate}"
                                                                Foreground="{TemplateBinding HeaderForeground}"
                                                                IsTabStop="False" />
                                                <ContentControl x:Name="MinimizedHeaderContent"
                                                                Grid.Column="1"
                                                                Margin="5,0,0,0"
                                                                HorizontalAlignment="{TemplateBinding HeaderHorizontalContentAlignment}"
                                                                VerticalAlignment="{TemplateBinding HeaderVerticalContentAlignment}"
                                                                HorizontalContentAlignment="{TemplateBinding HeaderHorizontalContentAlignment}"
                                                                VerticalContentAlignment="{TemplateBinding HeaderVerticalContentAlignment}"
                                                                Content="{TemplateBinding Header}"
                                                                ContentTemplate="{TemplateBinding MinimizedHeaderTemplate}"
                                                                Foreground="{TemplateBinding HeaderForeground}"
                                                                IsTabStop="False"
                                                                Visibility="Collapsed" />
                                            </Grid>
                                        </Grid>
                                    </Border>
                                    <!--  Content  -->
                                    <Grid x:Name="ContentGrid" Grid.Row="1" Margin="1,0,1,1">
                                        <Border Background="{TemplateBinding Background}" BorderBrush="{StaticResource DialogWindowContentBorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                            <Grid>
                                                <Grid x:Name="Core" Margin="16,0,16,0" DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SpellChecker.CurrentBadWord}">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" MinWidth="70" />
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel>
                                                        <StackPanel Margin="0,0,0,6" Orientation="Horizontal">
                                                            <TextBlock Margin="0,0,0,0" Style="{StaticResource HeaderTextBlockStyle}" Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SpellChecker.DialogSettings.DialogStringResources.NotInDictionary}" TextWrapping="Wrap" />
                                                            <TextBlock Margin="5,0,0,0" Style="{StaticResource HiglightedTextBlockStyle}" Text="{Binding Word}" />
                                                        </StackPanel>
                                                        <TextBlock Grid.Row="1"
                                                                   Margin="0,0,0,8"
                                                                   VerticalAlignment="Top"
                                                                   RenderTransformOrigin="1,1"
                                                                   Style="{StaticResource TextBlockStyle}"
                                                                   Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SpellChecker.DialogSettings.DialogStringResources.Context}"
                                                                   TextWrapping="Wrap"
                                                                   Visibility="Collapsed" />
                                                    </StackPanel>
                                                    <StackPanel Grid.Row="1" Margin="0,0,10,0">
                                                        <Border Margin="0" Background="{StaticResource DialogWindowBackgroundBrush}" BorderBrush="{StaticResource DialogWindowContentInnerBorderBrush}" BorderThickness="1">
                                                            <ScrollViewer Height="88" Style="{StaticResource ScrollViewerStyle}">
                                                                <TextBlock x:Name="Context" Margin="6,4" Style="{StaticResource TextBlockStyle}" TextWrapping="Wrap" />
                                                            </ScrollViewer>
                                                        </Border>
                                                    </StackPanel>
                                                    <StackPanel Grid.Row="1" Grid.Column="1">
                                                        <Button x:Name="Ignore" Content="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SpellChecker.DialogSettings.DialogStringResources.Ignore}" Style="{StaticResource ButtonStyle}">
                                                            <igDW:Commanding.Command>
                                                                <igDW:XamSpellCheckerDialogCommandSource CommandType="Ignore" EventName="Click" />
                                                            </igDW:Commanding.Command>
                                                        </Button>
                                                        <Button x:Name="IgnoreAll" Margin="0,8,0,0" Content="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SpellChecker.DialogSettings.DialogStringResources.IgnoreAll}" Style="{StaticResource ButtonStyle}">
                                                            <igDW:Commanding.Command>
                                                                <igDW:XamSpellCheckerDialogCommandSource CommandType="IgnoreAll" EventName="Click" />
                                                            </igDW:Commanding.Command>
                                                        </Button>
                                                    </StackPanel>
                                                    <StackPanel Grid.Row="2" Margin="0,8,10,0">
                                                        <TextBlock Margin="0,0,0,6" Style="{StaticResource HeaderTextBlockStyle}" Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SpellChecker.DialogSettings.DialogStringResources.Suggestions}" TextWrapping="Wrap" />
                                                        <ListBox x:Name="Suggestions" Height="88" SelectedItem="{Binding Mode=TwoWay, ElementName=ChangeTo, Path=Text}" Style="{StaticResource ListBoxStyle}" />
                                                        <TextBlock Margin="0,10,0,6" Style="{StaticResource HeaderTextBlockStyle}" Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SpellChecker.DialogSettings.DialogStringResources.UseThisInstead}" />
                                                        <TextBox x:Name="ChangeTo" Style="{StaticResource TextBoxStyle}" TextWrapping="Wrap" />
                                                    </StackPanel>
                                                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,32,0,0">
                                                        <Button x:Name="Change" Content="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SpellChecker.DialogSettings.DialogStringResources.Change}" Style="{StaticResource ButtonStyle}">
                                                            <igDW:Commanding.Command>
                                                                <igDW:XamSpellCheckerDialogCommandSource CommandType="Change" EventName="Click" />
                                                            </igDW:Commanding.Command>
                                                        </Button>
                                                        <Button x:Name="ChangeAll" Margin="0,8,0,0" Content="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SpellChecker.DialogSettings.DialogStringResources.ChangeAll}" Style="{StaticResource ButtonStyle}">
                                                            <igDW:Commanding.Command>
                                                                <igDW:XamSpellCheckerDialogCommandSource CommandType="ChangeAll" EventName="Click" />
                                                            </igDW:Commanding.Command>
                                                        </Button>
                                                    </StackPanel>
                                                    <StackPanel Grid.Row="3" Margin="0,10,10,0" Orientation="Horizontal">
                                                        <Button x:Name="PreviousField"
                                                                MinWidth="90"
                                                                HorizontalAlignment="Stretch"
                                                                Content="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SpellChecker.DialogSettings.DialogStringResources.PreviousField}"
                                                                Style="{StaticResource ButtonStyle}">
                                                            <igDW:Commanding.Command>
                                                                <igDW:XamSpellCheckerDialogCommandSource CommandType="PreviousField" EventName="Click" />
                                                            </igDW:Commanding.Command>
                                                        </Button>
                                                        <Button x:Name="NextField"
                                                                MinWidth="90"
                                                                Margin="8,0,0,0"
                                                                HorizontalAlignment="Stretch"
                                                                Content="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SpellChecker.DialogSettings.DialogStringResources.NextField}"
                                                                Style="{StaticResource ButtonStyle}">
                                                            <igDW:Commanding.Command>
                                                                <igDW:XamSpellCheckerDialogCommandSource CommandType="NextField" EventName="Click" />
                                                            </igDW:Commanding.Command>
                                                        </Button>
                                                    </StackPanel>
                                                </Grid>
                                                <Grid x:Name="SpellCheckCompleteGrid"
                                                      Margin="{TemplateBinding Padding}"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      Visibility="Collapsed">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition />
                                                        <RowDefinition />
                                                    </Grid.RowDefinitions>
                                                    <TextBlock Margin="10,5" HorizontalAlignment="Center" Style="{StaticResource TextBlockStyle}" Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SpellChecker.DialogSettings.DialogStringResources.SpellCheckComplete}" />
                                                    <Button Grid.Row="1"
                                                            Width="120"
