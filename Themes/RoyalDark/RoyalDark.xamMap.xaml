    <!--  *********************************  MapScalePane Style  *********************************  -->
    <Style x:Key="MapScalePaneStyle" TargetType="local:MapScalePane">
        <Setter Property="Background" Value="{StaticResource MapScalePaneBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource MapScalePaneBorderBrush}" />
        <Setter Property="BorderThickness" Value="{StaticResource DefaultBorderThickness}" />
        <Setter Property="CornerRadius" Value="0, 0" />
        <Setter Property="DisplayMode" Value="Bar" />
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}" />
        <Setter Property="IsDisplaySubdivisions" Value="True" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="PrimaryStyle" Value="{StaticResource ScalePrimaryStyle}" />
        <Setter Property="SecondaryStyle" Value="{StaticResource ScaleSecondaryStyle}" />
        <Setter Property="ShadowOffset" Value="0, 0" />
        <Setter Property="ShadowStyle" Value="{StaticResource ShadowStyle}" />
        <Setter Property="TextShadowStyle" Value="{StaticResource ShadowTextStyle}" />
        <Setter Property="TextStyle" Value="{StaticResource TextStyle}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:MapScalePane">
                    <Grid SnapsToDevicePixels="True">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0:0:1.0" Storyboard.TargetName="Background" Storyboard.TargetProperty="Opacity" To="0.85" />
                                        <DoubleAnimation Duration="0:0:2.0" Storyboard.TargetName="Foreground" Storyboard.TargetProperty="Opacity" To="0.85" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0:0:0.4" Storyboard.TargetName="Background" Storyboard.TargetProperty="Opacity" To="1" />
                                        <DoubleAnimation Duration="0:0:0.2" Storyboard.TargetName="Foreground" Storyboard.TargetProperty="Opacity" To="1" />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Rectangle Width="8"
                                   Margin="-8,0,0,0"
                                   HorizontalAlignment="Left"
                                   Fill="{StaticResource MapShadowLeftBackgroundBrush}"
                                   StrokeThickness="{StaticResource DefaultStrokeThickness}" />
                        <Border x:Name="Background" Grid.Column="1" Background="{TemplateBinding Background}" CornerRadius="0" />
                        <Border x:Name="Foreground"
                                Grid.Column="1"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="0"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <ContentPresenter Grid.Row="0" Content="{TemplateBinding Content}" />
                                <ContentPresenter x:Name="RootElement" Grid.Row="1" />
                            </Grid>
                        </Border>
                        <Rectangle Grid.Column="2"
                                   Width="8"
                                   Margin="0,0,-8,0"
                                   HorizontalAlignment="Right"
                                   Fill="{StaticResource MapShadowRightBackgroundBrush}"
                                   StrokeThickness="{StaticResource DefaultStrokeThickness}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
