              <ContentControl x:Name="VerticalThumbElement" Cursor="Hand" HorizontalContentAlignment="Stretch" Style="{TemplateBinding VerticalThumbStyle}" UseLayoutRounding="False" VerticalContentAlignment="Stretch">
                <Grid>
                  <Border BorderThickness="1,0" Margin="2,0" UseLayoutRounding="False" BorderBrush="{StaticResource VScaleBorderBrush}">
                    <Border BorderBrush="{StaticResource VScaleBackgroundBrush}" BorderThickness="2,0">
                      <Border BorderBrush="{StaticResource VScaleBorderBrush}" BorderThickness="1" Background="{StaticResource VThumbBackgroundBrush}" Margin="0,4"/>
                    </Border>
                  </Border>
                </Grid>
              </ContentControl>
              <ContentControl x:Name="VerticalScaleTopElement" Cursor="SizeNS" HorizontalContentAlignment="Stretch" Style="{StaticResource VerticalScaleTopStyle}" VerticalContentAlignment="Stretch" Height="8"/>
              <ContentControl x:Name="VerticalScaleBottomElement" Cursor="SizeNS" HorizontalContentAlignment="Stretch" Style="{StaticResource VerticalScaleBottomStyle}" VerticalContentAlignment="Stretch" Height="8" Canvas.Top="18"/>
            </Canvas>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
  <Style TargetType="local:XamZoombar" BasedOn="{StaticResource XamZoombarStyle}"/>

  <!-- *********************************  XamMultiScaleImage Style  ********************************* -->
  <Style x:Key="XamMultiScaleImageStyle" TargetType="maps:XamMultiScaleImage">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="maps:XamMultiScaleImage">
          <Border Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}">
            <ContentPresenter x:Name="ContentPresenter"/>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
  <Style TargetType="maps:XamMultiScaleImage" BasedOn="{StaticResource XamMultiScaleImageStyle}" />

</ResourceDictionary>