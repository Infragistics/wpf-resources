  </Style>

  <!-- *********************************  MapThumbnailPane Style  ********************************* -->
  <Style x:Key="MapThumbnailPaneStyle" TargetType="local:MapThumbnailPane">
    <Setter Property="WorldStyle" Value="{StaticResource ThumbnailWorldStyle}"/>
    <Setter Property="WindowStyle" Value="{StaticResource ThumbnailWindowStyle}"/>
    <Setter Property="PreviewStyle" Value="{StaticResource PreviewStyle}"/>
    <Setter Property="Background" Value="{StaticResource MapThumbnailPaneBackgroundBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource MapThumbnailPaneBorderBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="3"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="local:MapThumbnailPane">
          <Grid x:Name="RootVisual">
            <VisualStateManager.VisualStateGroups>
              <VisualStateGroup x:Name="CommonStates">
                <VisualState x:Name="Normal">
                  <Storyboard>
                    <DoubleAnimation Duration="0:0:1.0" Storyboard.TargetName="BackgroundVisual" Storyboard.TargetProperty="Opacity" To="0.6"/>
                    <DoubleAnimation Duration="0:0:0.2" Storyboard.TargetName="MouseOverVisual" Storyboard.TargetProperty="Opacity" To="0.0"/>
                    <DoubleAnimation Duration="0:0:2.0" Storyboard.TargetName="RootElementVisual" Storyboard.TargetProperty="Opacity" To="0.8"/>
                  </Storyboard>
                </VisualState>
                <VisualState x:Name="MouseOver">
                  <Storyboard>
                    <DoubleAnimation Duration="0:0:0.2" Storyboard.TargetName="BackgroundVisual" Storyboard.TargetProperty="Opacity" To="1"/>
                    <DoubleAnimation Duration="0:0:1.0" Storyboard.TargetName="MouseOverVisual" Storyboard.TargetProperty="Opacity" To="1.0"/>
                    <DoubleAnimation Duration="0:0:0.2" Storyboard.TargetName="RootElementVisual" Storyboard.TargetProperty="Opacity" To="1"/>
                  </Storyboard>
                </VisualState>
              </VisualStateGroup>
              <VisualStateGroup x:Name="ActionStates">
                <VisualState x:Name="Idle">
                  <Storyboard/>
                </VisualState>
                <VisualState x:Name="Panning">
                  <Storyboard>
                    <DoubleAnimation Duration="0:0:0.1" Storyboard.TargetName="PressedVisual" Storyboard.TargetProperty="Opacity" To="1.0"/>
                  </Storyboard>
                </VisualState>
              </VisualStateGroup>
              <VisualStateGroup x:Name="FocusStates">
                <VisualState x:Name="Focused">
                  <Storyboard>
                    <DoubleAnimation Duration="0:0:0.2" Storyboard.TargetName="FocusVisual" Storyboard.TargetProperty="Opacity" To="1.0"/>
                  </Storyboard>
                </VisualState>
                <VisualState x:Name="Unfocused">
                  <Storyboard>
                    <DoubleAnimation Duration="0:0:0.2" Storyboard.TargetName="FocusVisual" Storyboard.TargetProperty="Opacity" To="0.0"/>
                  </Storyboard>
                </VisualState>
              </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Rectangle StrokeThickness="1" Grid.Column="2" Fill="{StaticResource MapShadowRightBackgroundBrush}"/>
            <Rectangle StrokeThickness="1" Fill="{StaticResource MapShadowLeftBackgroundBrush}"/>
            <Grid x:Name="BackgroundVisual" Grid.Column="1">
              <Border x:Name="NormalVisual" 
                      CornerRadius="0" 
                      Background="{TemplateBinding Background}" 
                      BorderBrush="{TemplateBinding BorderBrush}" 
                      BorderThickness="{TemplateBinding BorderThickness}"/>
              <Border x:Name="MouseOverVisual" 
                      CornerRadius="0" Opacity="0" 
                      Background="{StaticResource MapThumbnailPaneHoverBackgroundBrush}" 
                      BorderThickness="{TemplateBinding BorderThickness}"/>
              <Border x:Name="PressedVisual" 
                      CornerRadius="0" Opacity="0" 
                      Background="{StaticResource MapThumbnailPaneHoverBackgroundBrush}" 
                      BorderThickness="{TemplateBinding BorderThickness}"/>
              <Border x:Name="FocusVisual" 
                      CornerRadius="0" Opacity="0" 
                      BorderThickness="{TemplateBinding BorderThickness}"/>
            </Grid>
            <Border x:Name="RootElementVisual" 
                    Opacity="1" 
                    BorderThickness="{TemplateBinding BorderThickness}" 
                    Padding="{TemplateBinding Padding}" 
                    Grid.Column="1">
              <Grid>
                <Grid.RowDefinitions>
                  <RowDefinition Height="auto"/>
                  <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <ContentPresenter Grid.Row="0" Content="{TemplateBinding Content}"/>
                <ContentPresenter Grid.Row="1" x:Name="RootElement"/>
              </Grid>
            </Border>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
  <Style TargetType="local:MapThumbnailPane" BasedOn="{StaticResource MapThumbnailPaneStyle}" />

  <!-- *********************************  ViewportDrag Style  ********************************* -->
  <Style x:Key="ViewportDragStyle" TargetType="Path">
    <Setter Property="StrokeThickness" Value="1"/>
