    <Setter Property="LabelFormatString" Value="{}{0:F0}"/>
    <Setter Property="SwatchStyle" Value="{StaticResource ColorSwatchSwatchStyle}"/>
    <Setter Property="LeaderStyle" Value="{StaticResource ColorSwatchSwatchStyle}"/>
    <Setter Property="TextStyle" Value="{StaticResource TextStyle}"/>
    <Setter Property="TextShadowStyle" Value="{StaticResource ShadowTextStyle}"/>
    <Setter Property="ShadowOffset" Value="1.5, 1.5"/>
    <Setter Property="ShadowStyle" Value="{StaticResource ShadowStyle}"/>
    <Setter Property="Background" Value="{StaticResource MapColorSwatchPaneBackgroundBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource MapColorSwatchPaneBorderBrush}"/>	
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="3"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="local:MapColorSwatchPane">
          <Grid>
            <VisualStateManager.VisualStateGroups>
              <VisualStateGroup x:Name="CommonStates">
                <VisualState x:Name="Normal">
                  <Storyboard>
                    <DoubleAnimation Duration="0:0:1.0" Storyboard.TargetName="Background" Storyboard.TargetProperty="Opacity" To="0.7"/>
                    <DoubleAnimation Duration="0:0:2.0" Storyboard.TargetName="Foreground" Storyboard.TargetProperty="Opacity" To="0.7"/>
                  </Storyboard>
                </VisualState>
                <VisualState x:Name="MouseOver">
                  <Storyboard>
                    <DoubleAnimation Duration="0:0:0.4" Storyboard.TargetName="Background" Storyboard.TargetProperty="Opacity" To="1"/>
                    <DoubleAnimation Duration="0:0:0.2" Storyboard.TargetName="Foreground" Storyboard.TargetProperty="Opacity" To="1"/>
                  </Storyboard>
                </VisualState>
              </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Rectangle StrokeThickness="1" Grid.Column="2" Fill="{StaticResource MapShadowRightBackgroundBrush}"/>
            <Rectangle StrokeThickness="1" Fill="{StaticResource MapShadowLeftBackgroundBrush}"/>
            <Border x:Name="Background" 
                    CornerRadius="0" 
                    Background="{TemplateBinding Background}" 
                    Grid.Column="1"/>
            <Border x:Name="Foreground" 
                    CornerRadius="0" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}" 
                    Padding="{TemplateBinding Padding}" 
                    Grid.Column="1">
              <Grid Margin="5">
                <Grid.RowDefinitions>
                  <RowDefinition Height="auto"/>
                  <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <ContentPresenter Grid.Row="0" Content="{TemplateBinding Content}"/>
