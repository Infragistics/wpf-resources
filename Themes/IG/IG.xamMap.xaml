  <!-- *********************************  MapScalePane Style  ********************************* -->
  <Style x:Key="MapScalePaneStyle" TargetType="local:MapScalePane">
    <Setter Property="DisplayMode" Value="Bar"/>
    <Setter Property="IsDisplaySubdivisions" Value="True"/>
    <Setter Property="CornerRadius" Value="0, 0"/>
    <Setter Property="PrimaryStyle" Value="{StaticResource ScalePrimaryStyle}"/>
    <Setter Property="SecondaryStyle" Value="{StaticResource ScaleSecondaryStyle}"/>
    <Setter Property="TextStyle" Value="{StaticResource TextStyle}"/>
    <Setter Property="TextShadowStyle" Value="{StaticResource ShadowTextStyle}"/>
    <Setter Property="ShadowOffset" Value="1.5, 1.5"/>
    <Setter Property="ShadowStyle" Value="{StaticResource ShadowStyle}"/>
    <Setter Property="Foreground" Value="{StaticResource ThemeForegroundBrush}"/>
    <Setter Property="Background" Value="{StaticResource MapScalePaneBackgroundBrush}"/>
    <Setter Property="BorderBrush" Value="{StaticResource MapScalePaneBorderBrush}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="3"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="local:MapScalePane">
          <Grid>
            <VisualStateManager.VisualStateGroups>
              <VisualStateGroup x:Name="CommonStates">
                <VisualState x:Name="Normal">
                  <Storyboard>
                    <DoubleAnimation Duration="0:0:1.0" Storyboard.TargetName="Background" Storyboard.TargetProperty="Opacity" To="0.6"/>
                    <DoubleAnimation Duration="0:0:2.0" Storyboard.TargetName="Foreground" Storyboard.TargetProperty="Opacity" To="0.6"/>
                  </Storyboard>
                </VisualState>
                <VisualState x:Name="MouseOver">
                  <Storyboard>
                    <DoubleAnimation Duration="0:0:0.4" Storyboard.TargetName="Background" Storyboard.TargetProperty="Opacity" To="1"/>
                    <DoubleAnimation Duration="0:0:0.2" Storyboard.TargetName="Foreground" Storyboard.TargetProperty="Opacity" To="1"/>
                  </Storyboard>
                </VisualState>
              </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Rectangle StrokeThickness="1" Grid.Column="2" Fill="{StaticResource MapShadowRightBackgroundBrush}" Margin="0,0,-8,0" Width="8" HorizontalAlignment="Right"/>
            <Rectangle StrokeThickness="1" Fill="{StaticResource MapShadowLeftBackgroundBrush}" Margin="-8,0,0,0" Width="8" HorizontalAlignment="Left"/>
            <Border x:Name="Background" 
                    CornerRadius="0" 
                    Background="{TemplateBinding Background}" 
                    Grid.Column="1"/>
            <Border x:Name="Foreground" 
                    CornerRadius="0" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}" 
                    Padding="{TemplateBinding Padding}" 
                    Grid.Column="1">
              <Grid>
                <Grid.RowDefinitions>
                  <RowDefinition Height="auto"/>
                  <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <ContentPresenter Grid.Row="0" Content="{TemplateBinding Content}"/>
                <ContentPresenter Grid.Row="1" x:Name="RootElement"/>
              </Grid>
            </Border>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
  <Style TargetType="local:MapScalePane" BasedOn="{StaticResource MapScalePaneStyle}" />

  <!-- *********************************  ColorSwatchSwatch Style  ********************************* -->
  <Style x:Key="ColorSwatchSwatchStyle" TargetType="Path">
