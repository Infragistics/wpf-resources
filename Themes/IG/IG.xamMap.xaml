  <!-- *********************************  ThumbnailWindow Style  ********************************* -->
  <Style x:Key="ThumbnailWindowStyle" TargetType="Path">
    <Setter Property="Fill" Value="{StaticResource ThumbnailWindowBackgroundBrush}"/>
