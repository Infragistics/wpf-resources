        <ResourceDictionary Source="IG.xamDateTimeInput.xaml" />
        <ResourceDictionary Source="IG.xamSlider.xaml" />
        <ResourceDictionary Source="IG.xamMaskedInput.xaml" />
        <ResourceDictionary Source="IG.xamColorPicker.xaml" />
        <ResourceDictionary Source="IG.Styles.xaml" />      
    </ResourceDictionary.MergedDictionaries>

