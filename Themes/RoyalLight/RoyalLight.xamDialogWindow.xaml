    <!--  *********************************  DialogButton Style  *********************************  -->
    <Style x:Key="DialogButtonStyle" TargetType="Button">
        <Setter Property="BorderThickness" Value="{StaticResource DefaultBorderThickness}" />
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="Height" Value="28" />
        <Setter Property="Padding" Value="3" />
        <Setter Property="Width" Value="34" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid igPrim:XamlHelper.SnapsToDevicePixels="True" Background="{StaticResource TransparentBrush}">
                        <Rectangle Fill="{StaticResource TransparentBrush}" />
                        <Rectangle x:Name="ButtonHover" Fill="{StaticResource DialogWindowButtonHoverBackgroundBrush}" Opacity="0" />
                        <Rectangle x:Name="ButtonPressed" Fill="{StaticResource ButtonPressedBackgroundBrush}" Opacity="0" />
                        <ContentControl x:Name="contentControl" Focusable="False" Foreground="{StaticResource DialogWindowGlyphBackgroundBrush}">
                            <ContentPresenter x:Name="contentPresenter"
                                              Margin="{TemplateBinding Padding}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Content="{TemplateBinding Content}"
                                              ContentTemplate="{TemplateBinding ContentTemplate}" />
                        </ContentControl>
                    </Grid>
                     <ControlTemplate.Triggers>
                           <Trigger Property="IsMouseOver" Value="True">
                               <Setter TargetName="ButtonHover" Property="Opacity" Value="1" />
                               <Setter TargetName="contentControl" Property="Foreground" Value="{StaticResource DialogWindowGlyphHoverBackgroundBrush}" />
                           </Trigger>
                          <Trigger Property="IsPressed" Value="True">
                              <Setter TargetName="ButtonPressed" Property="Opacity" Value="1" />
                              <Setter TargetName="contentControl" Property="Foreground" Value="{StaticResource DialogWindowGlyphPressedBackgroundBrush}" />
                         </Trigger>
                           <Trigger Property="IsEnabled" Value="False">
                               <Setter TargetName="contentControl" Property="Opacity" Value="0.3" />
                           </Trigger>
                       </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

