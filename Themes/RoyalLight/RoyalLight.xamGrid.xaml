                                  IsTabStop="False"
                                  Style="{StaticResource FilterCheckBoxStyle}" />
                      </ContentPresenter.Content>
                    </ContentPresenter>
                    <!--  Header presenter  -->
                    <Grid Grid.Column="1">
                      <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
