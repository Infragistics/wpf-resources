                                        IsEnabled="{Binding IsHideable}"
                                        Style="{StaticResource CheckBoxStyle}" />
                              <TextBlock Grid.Column="1"
                                         Margin="6,4"
                                         Style="{StaticResource TextBlockStyle}"
                                         Text="{Binding DisplayNameResolved}" />
                            </Grid>
