                            VerticalAlignment="Center"
                            Data="{StaticResource RemoveFilterIcon}"
                            Fill="{StaticResource GlyphPressedBackgroundBrush}"
                            Stretch="Fill" />
                </Grid>
              </ContentControl>
            </Grid>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
