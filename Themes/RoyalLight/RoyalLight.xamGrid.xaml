    <Setter Property="BorderBrush" Value="{StaticResource GroupByAreaExpansionIndicatorBorderBrush}" />
    <Setter Property="BorderThickness" Value="{StaticResource DefaultBorderThickness}" />
    <Setter Property="Cursor" Value="Hand" />
