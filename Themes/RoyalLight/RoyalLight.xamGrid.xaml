                            Fill="{StaticResource FilterMenuBusyIndicatorPathBackgroundBrush}"
                            RenderTransformOrigin="0.5,0.5"
                            Stretch="Fill"
                            StrokeThickness="0">
                        <Path.RenderTransform>
                          <RotateTransform />
                        </Path.RenderTransform>
                      </Path>
                      <TextBlock Margin="10,8,10,0"
