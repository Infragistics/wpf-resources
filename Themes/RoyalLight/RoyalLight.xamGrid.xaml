                    <Grid.ColumnDefinitions>
                      <ColumnDefinition x:Name="IconPlace" />
                      <ColumnDefinition Width="*" />
                      <ColumnDefinition x:Name="ChildIndicatorPlace" Width="24" />
                    </Grid.ColumnDefinitions>
