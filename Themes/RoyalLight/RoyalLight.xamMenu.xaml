                    <DoubleAnimation  Duration="0" Storyboard.TargetName="HeaderPresenter" Storyboard.TargetProperty="(UIElement.Opacity)" To="0" />
                    <DoubleAnimation  Duration="0" Storyboard.TargetName="HeaderPresenterTopLevelNormal" Storyboard.TargetProperty="(UIElement.Opacity)" To="1" />
