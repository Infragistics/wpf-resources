    <!-- LegendItem -->

    <DataTemplate x:Key="LegendItemRectBadgeTemplate">
        <Grid Width="18" Height="16" Margin="0 0 2 0" >
            <Path Width="16" Height="14" VerticalAlignment="Center" HorizontalAlignment="Center"
                    Effect="{Binding Series.Effect}" Fill="{Binding Series.ActualBrush}" Stroke="{Binding Series.ActualOutline}" StrokeThickness="{Binding Series.Thickness}">
                <Path.Data>
                    <PathGeometry>
                        <PathFigure StartPoint="0, 5" IsFilled="True">
                            <PathFigure.Segments>
                                <LineSegment Point="0, 14"/>
                                <LineSegment Point="11, 14"/>
                                <ArcSegment Size="5, 5" IsLargeArc="False" Point="16, 9"/>
                                <LineSegment Point="16, 0"/>
                                <LineSegment Point="5, 0"/>
                                <ArcSegment Size="5, 5" IsLargeArc="False" Point="0, 5"/>
                            </PathFigure.Segments>
                        </PathFigure>
                    </PathGeometry>
                </Path.Data>
            </Path>
            <ContentPresenter Width="11" Height="11" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 0 2 0"
                    ContentTemplate="{Binding Series.ActualMarkerTemplate}" Content="{Binding}"/>
        </Grid>
    </DataTemplate>

