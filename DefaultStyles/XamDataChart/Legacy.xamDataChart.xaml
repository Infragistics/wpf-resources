<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:shared="http://schemas.infragistics.com/xaml"
    xmlns:local="http://schemas.infragistics.com/xaml"
    xmlns:ig="http://schemas.infragistics.com/xaml">

    <!-- ============================** BRUSHES ============================** -->
    <SolidColorBrush x:Key="ChartBackgroundBrush" Color="Transparent"/>

    <SolidColorBrush x:Key="ForegroundBrush" Color="#FF373737"/>

    <LinearGradientBrush x:Key="LegendBackground" EndPoint="0,1" StartPoint="0,0">
        <GradientStop Color="White" Offset="0"/>
        <GradientStop Color="#FFE8E8EF" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="GenericBorder" StartPoint="0.0, 0.0" EndPoint="0.0, 1.0">
        <GradientStop Color="#FFCCD3D8" Offset="0"/>
        <GradientStop Color="#FF8C9194" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="GenericBackground" StartPoint="0.0, 0.0" EndPoint="0.0, 1.0">
        <GradientStop Color="#FFE0E2E8" Offset="0"/>
        <GradientStop Color="#FFB7B9BE" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="GenericOverlay" StartPoint="0.0, 0.0" EndPoint="0.0, 1.0" Opacity="0.0">
        <GradientStop Color="#FFF2F6F9" Offset="0" />
        <GradientStop Color="#FFCCD3D8" Offset="1" />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="SeriesBrush" Color="#FFFF9D3D"/>
    <SolidColorBrush x:Key="NegativeBrush" Color="#FF415460"/>

    <!-- ChartBrushes -->

    <shared:BrushCollection x:Key="ChartBrushes">
  
        <RadialGradientBrush Center="0.38,0.39" GradientOrigin="0.38,0.39" RadiusX="0.555" RadiusY="0.57">
            <GradientStop Color="#FF50a8be" />
            <GradientStop Color="#FF357686" Offset="1" />
        </RadialGradientBrush>

        <RadialGradientBrush Center="0.38,0.39" GradientOrigin="0.38,0.39" RadiusX="0.555" RadiusY="0.57">
            <GradientStop Color="#FFfc6754"/>
            <GradientStop Color="#FFe45340" Offset="1"/>
        </RadialGradientBrush>

        <RadialGradientBrush Center="0.38,0.39" GradientOrigin="0.38,0.39" RadiusX="0.555" RadiusY="0.57">
            <GradientStop Color="#FFfec33c" Offset="1"/>
            <GradientStop Color="#FFedb22c"/>
        </RadialGradientBrush>

        <RadialGradientBrush Center="0.38,0.39" GradientOrigin="0.38,0.39" RadiusX="0.555" RadiusY="0.57">
            <GradientStop Color="#FF3c6399"/>
            <GradientStop Color="#FF264f88" Offset="1"/>
        </RadialGradientBrush>

        <RadialGradientBrush Center="0.38,0.39" GradientOrigin="0.38,0.39" RadiusX="0.555" RadiusY="0.57">
            <GradientStop Color="#FF91af49"/>
            <GradientStop Color="#FF809d38" Offset="1"/>
        </RadialGradientBrush>

    </shared:BrushCollection>

    <!-- ChartOutlines -->

    <shared:BrushCollection x:Key="ChartOutlines">
  
        <SolidColorBrush Color="#FFB1BFC9"/>
        <SolidColorBrush Color="#FF798995"/>
        <SolidColorBrush Color="#FF4F606C"/>
        <SolidColorBrush Color="#FF374650"/>
        <SolidColorBrush Color="#FF162C3B"/>
    </shared:BrushCollection>

    <!-- ***********  END BRUSHES  ==============************** -->

