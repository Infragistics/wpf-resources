                                        <!-- ITEMS -->
                                        <Grid Grid.Row="2">
                                            <igPrim:GridSortableListBox IsSortable="{Binding IsSortable, RelativeSource={RelativeSource TemplatedParent}}"  ItemsSource="{Binding Columns, RelativeSource={RelativeSource TemplatedParent}}" Background="{TemplateBinding Background}" BorderThickness="0" Margin="{TemplateBinding Padding}">
                                                <igPrim:GridSortableListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="35"/>
