                                            <TextBlock Foreground="White" Text="{Binding FirstColumnValue, Converter={StaticResource CultureConverter}}" Margin="5" />
                                            <Rectangle Stroke="#59FFFFFF" RadiusX="2" RadiusY="2" Margin="1"/>
                                        </Grid>
                                    </Border>
                                </Grid>
