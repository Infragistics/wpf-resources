    <DataTemplate x:Key="filterMenuCustom">
        <igPrim:FilterMenuXamMenuItem IsCheckable="{Binding IsCheckable}"
                                      IsSeparator="{Binding IsSeparator}"
                                      IsChecked="{Binding IsChecked, Mode=TwoWay}"
