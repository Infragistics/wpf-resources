<ResourceDictionary 
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:igControls="http://infragistics.com/Controls"
  xmlns:local="http://schemas.infragistics.com/xaml"  >

    <!-- ========================================================================= -->
    <!-- ================================ Brushes ================================ -->

    <LinearGradientBrush x:Key="BaseBorderBrush" StartPoint="0,0" EndPoint="0,1">
        <LinearGradientBrush.GradientStops>
            <GradientStopCollection>
                <GradientStop Color="#FFa3aeb9" Offset="0"/>
                <GradientStop Color="#FF8399a9" Offset="0.3700000047683716"/>
                <GradientStop Color="#FF718597" Offset="0.3709999918937683"/>
                <GradientStop Color="#FF617584" Offset="1"/>
            </GradientStopCollection>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="BaseColorBrush" Color="#FF1F3B53"/>
    <LinearGradientBrush x:Key="BaseOverlayBrush" StartPoint="0.5,0" EndPoint="0.5,1">
        <LinearGradientBrush.GradientStops>
            <GradientStopCollection>
                <GradientStop Color="#FFffffff" Offset="0"/>
                <GradientStop Color="#f9ffffff" Offset="0.3700000047683716"/>
                <GradientStop Color="#e4ffffff" Offset="0.6299999952316284"/>
                <GradientStop Color="#c6ffffff" Offset="1"/>
            </GradientStopCollection>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="tlSceneBorderBrush" StartPoint="0,0" EndPoint="0,1">
        <LinearGradientBrush.GradientStops>
            <GradientStopCollection>
                <GradientStop Color="#FFa3aeb9" Offset="0"/>
                <GradientStop Color="#FF8399a9" Offset="0.3700000047683716"/>
                <GradientStop Color="#FF718597" Offset="0.3709999918937683"/>
                <GradientStop Color="#FFa2adb8" Offset="1"/>
            </GradientStopCollection>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="tlSceneInnerBorderBrush" Color="#7FFFFFFF"/>
    <LinearGradientBrush x:Key="tlSceneOverlayBrush" StartPoint="0,0" EndPoint="0,1">
        <LinearGradientBrush.GradientStops>
            <GradientStopCollection>
                <GradientStop Color="#d8ffffff" Offset="0"/>
                <GradientStop Color="#f1ffffff" Offset="0.23180000483989716"/>
                <GradientStop Color="#F3ffffff" Offset="0.3700000047683716"/>
                <GradientStop Color="#F7ffffff" Offset="0.6299999952316284"/>
                <GradientStop Color="#FFffffff" Offset="1"/>
            </GradientStopCollection>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="AxisPointBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
        <LinearGradientBrush.GradientStops>
            <GradientStopCollection>
                <GradientStop Color="#FFcfd5da" Offset="0"/>
                <GradientStop Color="#FFcfd5da" Offset="0.014000000432133675"/>
                <GradientStop Color="#FFffffff" Offset="1"/>
            </GradientStopCollection>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="HighlightBrush" Color="#FF6DBDD1"/>
    <SolidColorBrush x:Key="TrackBorderBrush" Color="#FFA3AEB9"/>
    <SolidColorBrush x:Key="TrackBackgroundBrush" Color="#FFE6EFF7"/>
    <LinearGradientBrush x:Key="TrackBackgroundBrush2" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FFCFD5DA"/>
        <GradientStop Color="#FFFFFFFF" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="SLColorFillBrush" StartPoint="0,0" EndPoint="0,1">
        <LinearGradientBrush.GradientStops>
            <GradientStopCollection>
                <GradientStop Offset="0" Color="#FFFEFEFE"/>
                <GradientStop Offset=".4" Color="#FFF5F6F7"/>
                <GradientStop Offset="1" Color="#FFccd2d7"/>
            </GradientStopCollection>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="EventTitleBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
        <LinearGradientBrush.GradientStops>
            <GradientStopCollection>
                <GradientStop Offset="0" Color="#FFffffff"/>
                <GradientStop Offset="1" Color="#FFeff1f3"/>
            </GradientStopCollection>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>

    <!-- ============================== END Brushes ============================== -->
    <!-- ========================================================================= -->

    <!-- ==================== STYLING FOR SCROLLVIEWER USED IN EVENTDETAILS ==================== -->
    <!-- ======================================================================================= -->
       
    <!--WPF specific styles-->

    <Style x:Key="EventDetailsScrollBarStyle" TargetType="ScrollBar">
    </Style>

    <Style x:Key="EventDetailsScrollViewerStyle" TargetType="ScrollViewer">       
    </Style>

    <!--END of WPF specific styles-->
    
    <!-- ============== END Brushes STYLING FOR SCROLLVIEWER USED IN EVENTDETAILS ============== -->
    <!-- ======================================================================================= -->


    <!--Timeline-->
    <Style TargetType="local:XamTimeline">
        <Setter Property="MinWidth" Value="120" />
        <Setter Property="MinHeight" Value="100" />
        <Setter Property="EventTitleTopStyle">
            <Setter.Value>
                <Style TargetType="local:EventTitle">
                    <Setter Property="LineStyle">
                        <Setter.Value>
                            <Style TargetType="Line">
                                <Setter Property="StrokeThickness" Value="1" />
                                <Setter Property="Stroke" Value="{StaticResource BaseBorderBrush}" />
                                <Setter Property="Canvas.ZIndex" Value="-1" />
                                <Setter Property="Margin" Value="0,3,0,0" />
                            </Style>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="local:EventTitle">
                                <Border BorderThickness="0,0,1,1" 
                                        BorderBrush="#59617583" 
                                        CornerRadius="4">
                                    <Border HorizontalAlignment="Left"
								            BorderThickness="{TemplateBinding BorderThickness}"
								            Background="{TemplateBinding Background}"
								            BorderBrush="{TemplateBinding BorderBrush}"
								            CornerRadius="3">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <TextBlock Text="{TemplateBinding Title}" 
                                                   TextWrapping="Wrap" />
                                            <TextBlock Text="{TemplateBinding FormattedText}"
                                                   TextWrapping="Wrap" 
                                                   Grid.Row="1" />
                                        </Grid>
                                    </Border>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="EventTitleBottomStyle">
            <Setter.Value>
                <Style TargetType="local:EventTitle">
                    <Setter Property="LineStyle">
                        <Setter.Value>
                            <Style TargetType="Line">
                                <Setter Property="StrokeThickness" Value="1" />
                                <Setter Property="Stroke" Value="{StaticResource BaseBorderBrush}" />
                                <Setter Property="Canvas.ZIndex" Value="-1" />
                                <Setter Property="Margin" Value="0,0,0,3" />
                            </Style>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="local:EventTitle">
                                <Border BorderThickness="0,0,1,1" 
                                        BorderBrush="#59617583" 
                                        CornerRadius="4">
                                    <Border HorizontalAlignment="Left"
								            BorderThickness="{TemplateBinding BorderThickness}"
								            Background="{TemplateBinding Background}"
								            BorderBrush="{TemplateBinding BorderBrush}"
								            CornerRadius="3">
                                        <Grid>
                                            <Border BorderBrush="#FFFFFFFF" 
                                                    BorderThickness="1" 
                                                    CornerRadius="2" />
                                            <Grid Margin="{TemplateBinding Padding}">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <TextBlock Text="{TemplateBinding FormattedText}"
                                                           TextWrapping="Wrap" />
                                                <TextBlock Text="{TemplateBinding Title}" 
                                                           TextWrapping="Wrap" 
                                                           Grid.Row="1"/>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="EventPointStyle">
            <Setter.Value>
                <Style TargetType="local:EventPoint">
                    <Setter Property="Width" Value="10" />
                    <Setter Property="Stroke" Value="{StaticResource BaseBorderBrush}"/>
                    <Setter Property="Fill" Value="{StaticResource BaseBorderBrush}"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="local:EventPoint">
                                <Grid Width="{TemplateBinding Width}" Height="{TemplateBinding Width}">
                                    <Ellipse Fill="{TemplateBinding Fill}" Stroke="{TemplateBinding Stroke}" StrokeThickness="1"/>
                                    <Ellipse Stroke="#66FFFFFF" Margin="1,1,1,1"/>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="EventDetailsTopStyle">
            <Setter.Value>
                <Style TargetType="local:EventDetails">
                    <Setter Property="HorizontalAlignment" Value="Left" />
                    <Setter Property="Background" Value="{StaticResource BaseColorBrush}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource BaseBorderBrush}"/>
                    <Setter Property="BorderThickness" Value="1,1,3,3"/>
                    <Setter Property="Foreground" Value="#FF333333"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="local:EventDetails">
                                <Grid VerticalAlignment="Bottom"
                                      HorizontalAlignment="Left">
                                    <Border BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="3">
                                        <Border Background="{StaticResource BaseOverlayBrush}" 
                                                CornerRadius="2">
                                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                                          BorderThickness="0"
                                                          Padding="0"
                                                          Margin="5,5,5,5"
                                                          Style="{StaticResource EventDetailsScrollViewerStyle}"
                                                          IsTabStop="False">
                                                <TextBlock Text="{TemplateBinding Details}"
                                                           Foreground="{TemplateBinding Foreground}"
                                                           TextWrapping="Wrap" />
                                            </ScrollViewer>
                                        </Border>
                                    </Border>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="EventDetailsBottomStyle">
            <Setter.Value>
                <Style TargetType="local:EventDetails">
                    <Setter Property="HorizontalAlignment" Value="Left" />
                    <Setter Property="Background" Value="{StaticResource BaseColorBrush}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource BaseBorderBrush}"/>
                    <Setter Property="BorderThickness" Value="1,1,3,3"/>
                    <Setter Property="Foreground" Value="#FF333333"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="local:EventDetails">
                                <Grid VerticalAlignment="Top"
                                      HorizontalAlignment="Left">
                                    <Border BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="3">
                                        <Border Background="{StaticResource BaseOverlayBrush}" 
                                                CornerRadius="2">
                                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                                          BorderThickness="0"
                                                          Padding="0"
                                                          Margin="5,5,5,5"
                                                          Style="{StaticResource EventDetailsScrollViewerStyle}"
                                                          IsTabStop="False">
                                                <TextBlock Text="{TemplateBinding Details}"
                                                           Foreground="{TemplateBinding Foreground}"
                                                           TextWrapping="Wrap" />
                                            </ScrollViewer>
                                        </Border>
                                    </Border>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="EventSpanTopStyle">
            <Setter.Value>
                <Style TargetType="local:EventSpan">
                    <Setter Property="Stroke" Value="{StaticResource BaseBorderBrush}"/>
                    <Setter Property="Fill" Value="{StaticResource BaseBorderBrush}"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="local:EventSpan">
                                <Grid Margin="0,2,0,2">
                                    <Rectangle RadiusX="5"
                                               RadiusY="5"
                                               Fill="{TemplateBinding Fill}"
                                               Stroke="{TemplateBinding Stroke}" 
                                               StrokeThickness="1" 
                                               Height="10" 
                                               VerticalAlignment="Top" />
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="EventSpanBottomStyle">
            <Setter.Value>
                <Style TargetType="local:EventSpan">
                    <Setter Property="Stroke" Value="{StaticResource BaseBorderBrush}"/>
                    <Setter Property="Fill" Value="{StaticResource BaseBorderBrush}"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="local:EventSpan">
                                <Grid Margin="0,2,0,2">
                                    <Rectangle RadiusX="5"
                                               RadiusY="5"
                                               Fill="{TemplateBinding Fill}"
                                               Stroke="{TemplateBinding Stroke}" 
                                               StrokeThickness="1" 
                                               Height="10" 
                                               VerticalAlignment="Bottom" />
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>

        <Setter Property="MessageControlStyle">
            <Setter.Value>
                <Style TargetType="local:MessageControl">
                    <Setter Property="Background" Value="White" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="local:MessageControl">
                                <Border BorderThickness="{TemplateBinding BorderThickness}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="6">
                                    <TextBlock Text="{TemplateBinding Content}" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center" 
                                               FontSize="14"
                                               FontWeight="Bold"
                                               TextWrapping="Wrap"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="Background" Value="{StaticResource BaseColorBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BaseBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1,1,1,0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:XamTimeline">
                    <Grid>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <local:Title Content="{TemplateBinding Title}" 
                                         Style="{TemplateBinding TitleStyle}" />
                            <!-- Use a nested Grid to avoid possible clipping behavior resulting from ColumnSpan+Width=Auto -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <local:TimelineLegend x:Name="LegendElement" 
                                                  Title="{TemplateBinding LegendTitle}"
                                                  Grid.Column="1"
                                                  Margin="10,0,0,0"/>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid>
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <Grid>
                                                <Border Background="{StaticResource BaseOverlayBrush}"/>
                                                <Border BorderBrush="{StaticResource tlSceneInnerBorderBrush}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}" />
                                                <local:Scene x:Name="SceneElement" 
                                                             Style="{TemplateBinding SceneStyle}" 
                                                             Grid.Column="0" Margin="5" />
                                                <Canvas x:Name="DetailsPaneElement" />
                                            </Grid>
                                        </Border>
                                    </Grid>
                                    <Grid x:Name="ZoombarPanelElement" 
                                      Height="70" 
                                      Grid.Row="1" />
                                </Grid>
                            </Grid>
                        </Grid>
                        <local:MessageControl x:Name="MessageControlElement"
                                              Style="{TemplateBinding MessageControlStyle}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!--Scene-->
    <Style TargetType="local:Scene">
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:Scene">
                    <Grid>
                        <local:StripesPanel x:Name="StripesPanelElement" />
                        <local:GridLinesPanel x:Name="GridLinesPanelElement" />
                        <Grid Style="{TemplateBinding SceneGridStyle}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <local:EventTitlesPanel x:Name="TitlesPanelTopOrLeftElement"
                                                    Position="TopOrLeft" />
                            <Grid x:Name="AxisPaneElement" Grid.Row="1" />
                            <local:EventTitlesPanel x:Name="TitlesPanelBottomOrRightElement" 
                                                    Position="BottomOrRight"
                                                    Grid.Row="2" />
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--Axis-->
    <Style TargetType="local:TimelineAxis">
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="MajorTickMarkStyle">
            <Setter.Value>
                <Style TargetType="local:Mark">
                    <Setter Property="Width" Value="2"/>
                    <Setter Property="Height" Value="12"/>
                    <Setter Property="Fill" Value="{StaticResource BaseBorderBrush}"/>
                    <Setter Property="Stroke" Value="{StaticResource BaseBorderBrush}"/>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="MinorTickMarkStyle">
            <Setter.Value>
                <Style TargetType="local:Mark">
                    <Setter Property="Width" Value="2"/>
                    <Setter Property="Height" Value="12"/>
                    <Setter Property="Fill" Value="{StaticResource BaseBorderBrush}"/>
                    <Setter Property="Stroke" Value="{StaticResource BaseBorderBrush}"/>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="MajorGridLineStyle">
            <Setter.Value>
                <Style TargetType="local:Mark">
                    <Setter Property="Width" Value="2"/>
                    <Setter Property="Fill" Value="{StaticResource TrackBorderBrush}"/>
                    <Setter Property="Stroke" Value="{StaticResource TrackBorderBrush}"/>
                </Style>
            </Setter.Value>
        </Setter>

        <Setter Property="MinorGridLineStyle">
            <Setter.Value>
                <Style TargetType="local:Mark">
                    <Setter Property="Width" Value="2"/>
                    <Setter Property="Fill" Value="{StaticResource TrackBorderBrush}"/>
                    <Setter Property="Stroke" Value="{StaticResource TrackBorderBrush}"/>
                </Style>
            </Setter.Value>
        </Setter>

        <Setter Property="PaneStyle">
            <Setter.Value>
                <Style TargetType="local:Mark">
                    <Setter Property="Height" Value="6" />
                    <Setter Property="Stroke" Value="{StaticResource TrackBorderBrush}"/>
                    <Setter Property="Fill" Value="{StaticResource TrackBackgroundBrush}"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="local:Mark">
                                <Rectangle Fill="{TemplateBinding Fill}" 
                                           Stroke="{TemplateBinding Stroke}" 
                                           RadiusX="3" 
                                           RadiusY="3"/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:TimelineAxis">
                    <Grid Background="{TemplateBinding Background}">
                        <local:AxisPane x:Name="AxisPaneElement" />
                        <Canvas x:Name="ThumbCanvasElement" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--PreviewAxis-->
    <Style TargetType="local:PreviewAxis">
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="IsHitTestVisible" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:PreviewAxis">
                    <Grid Background="{TemplateBinding Background}">
                        <local:AxisPane x:Name="AxisPaneElement" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- AxisPane -->
    <Style TargetType="local:AxisPane">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:AxisPane">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <local:TickMarksPanel x:Name="TickMarksPanelElement" 
                                                  VerticalAlignment="Center" />

                            <local:Mark x:Name="PaneElement"
                                        VerticalAlignment="Center" />

                            <local:AxisEventsPanel x:Name="AxisEventsPanelElement" 
                                                   Height="40"
                                                   VerticalAlignment="Center" />

                            <local:LabelsPanel x:Name="LabelsPanelElement"
                                               Grid.Row="1" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--AxisThumb-->
    <Style TargetType="local:AxisThumb">
        <Setter Property="Width" Value="12" />
        <Setter Property="Height" Value="22" />
        <Setter Property="Canvas.ZIndex" Value="1" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Background" Value="{StaticResource BaseColorBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BaseBorderBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:AxisThumb">
                    <Border
						CornerRadius="2,2,2,2"
						BorderBrush="{TemplateBinding BorderBrush}"
						Background="{TemplateBinding Background}"
						BorderThickness="1,1,1,1">
                        <Grid>
                            <Rectangle Fill="{StaticResource BaseOverlayBrush}" RadiusX="1" RadiusY="1"/>
                            <Rectangle Stroke="#FFFFFFFF" RadiusX="1" RadiusY="1"/>
                            <Border Width="1" BorderThickness="0,0,0,1" Background="#FF99A6B2" BorderBrush="#FFFFFFFF" Margin="0,5,3,5" HorizontalAlignment="Center"/>
                            <Border Width="1" Margin="2,5,0,5" HorizontalAlignment="Center" VerticalAlignment="Stretch" BorderBrush="#FFFFFFFF" Background="#FF99A6B2" BorderThickness="0,0,0,1"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--AxisLabel-->
    <Style TargetType="local:AxisLabel">
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:AxisLabel">
                    <TextBlock x:Name="TextBlockElement" Text="{TemplateBinding FormattedText}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--Title-->
    <Style TargetType="local:Title">
        <Setter Property="Foreground" Value="#FF000000"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Top"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:Title">
                    <ContentPresenter
                        Content="{TemplateBinding Content}"
                        ContentTemplate="{TemplateBinding ContentTemplate}"
                        Cursor="{TemplateBinding Cursor}"
                        Margin="{TemplateBinding Padding}"
                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--TimelineLegend-->
    <Style TargetType="local:TimelineLegend">
        <Setter Property="BorderBrush" Value="{StaticResource BaseBorderBrush}"/>
        <Setter Property="Background" Value="{StaticResource BaseColorBrush}"/>
        <Setter Property="BorderThickness" Value="1,1,3,3"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="TitleStyle">
            <Setter.Value>
                <Style TargetType="local:Title">
                    <Setter Property="Margin" Value="0,5,0,10"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:TimelineLegend">
                    <Grid VerticalAlignment="{TemplateBinding VerticalAlignment}">
                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="3">
                            <Border Background="{StaticResource BaseOverlayBrush}" CornerRadius="2">
                                <Grid Margin="{TemplateBinding Padding}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <local:Title Content="{TemplateBinding Title}" Style="{TemplateBinding TitleStyle}"/>
                                    <ScrollViewer
											Grid.Row="1"
											VerticalScrollBarVisibility="Auto"
											BorderThickness="0"
											Padding="0"
											IsTabStop="False">
                                        <StackPanel Grid.Column="1" x:Name="LegendItemsArea"/>
                                    </ScrollViewer>
                                </Grid>
                            </Border>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--LegendItem-->
    <Style TargetType="local:LegendItem">
        <Setter Property="Fill" Value="{StaticResource BaseBorderBrush}"/>
        <Setter Property="Stroke" Value="{StaticResource BaseBorderBrush}"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:LegendItem">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="8" 
                                 Height="8"
                                 Fill="{TemplateBinding Fill}" 
                                 Stroke="{TemplateBinding Stroke}" 
                                 StrokeThickness="1" />
                        <local:Title  Content="{TemplateBinding Content}" 
                                      Margin="5,0,0,0"
                                      Foreground="{TemplateBinding Foreground}" />
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--Mark-->
    <Style TargetType="local:Mark">
        <Setter Property="Fill" Value="{StaticResource BaseBorderBrush}"/>
        <Setter Property="Stroke" Value="{StaticResource BaseBorderBrush}"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:Mark">
                    <Rectangle Fill="{TemplateBinding Fill}" Stroke="{TemplateBinding Stroke}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--Stripe-->
    <Style TargetType="local:Stripe">
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:Stripe">
                    <Rectangle Fill="{TemplateBinding Fill}" 
                               Stroke="{TemplateBinding Stroke}" 
                               StrokeThickness="{TemplateBinding StrokeThickness}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="local:MessageControl">
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:MessageControl">
                    <Grid Background="Black">
                        <TextBlock Text="{TemplateBinding Content}" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" 
                                   Foreground="White"
                                   TextWrapping="Wrap"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--
        ********************
        Event templates
        ********************
    -->

    <!--EventTitle-->
    <Style TargetType="local:EventTitle">
        <Setter Property="MaxWidth" Value="180" />
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Background" Value="{StaticResource EventTitleBackgroundBrush}" />
        <Setter Property="Foreground" Value="#FF333333"/>
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{StaticResource BaseBorderBrush}" />
        <Setter Property="PointStringFormat" Value="{}[{0}]" />
        <Setter Property="SpanStringFormat" Value="{}[{0}-{1}]" />
        <Setter Property="Padding" Value="5"/>
        <Setter Property="LineStyle">
            <Setter.Value>
                <Style TargetType="Line">
                    <Setter Property="StrokeThickness" Value="1" />
                    <Setter Property="Stroke" Value="{StaticResource BaseBorderBrush}" />
                    <Setter Property="Canvas.ZIndex" Value="-1" />
                    <Setter Property="Margin" Value="0,3,0,0" />
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:EventTitle">
                    <Border BorderThickness="0,0,1,1" 
                            BorderBrush="#59617583" 
                            CornerRadius="4">
                        <Border HorizontalAlignment="Left"
							    BorderThickness="{TemplateBinding BorderThickness}"
						 	    Background="{TemplateBinding Background}"
						 	    BorderBrush="{TemplateBinding BorderBrush}"
							    CornerRadius="3">
                            <Grid>
                                <Border BorderBrush="#FFFFFFFF" 
                                        BorderThickness="1" 
                                        CornerRadius="2" />
                                <Grid Margin="{TemplateBinding Padding}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="{TemplateBinding FormattedText}"
										TextWrapping="Wrap" />
                                    <TextBlock Text="{TemplateBinding Title}" 
									    TextWrapping="Wrap" 
									    Grid.Row="1"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--EventDetails-->
    <Style TargetType="local:EventDetails">
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Background" Value="{StaticResource BaseColorBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BaseBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1,1,3,3"/>
        <Setter Property="Foreground" Value="#FF333333"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:EventDetails">
                    <Grid>
                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="3">
                            <Border Background="{StaticResource BaseOverlayBrush}" CornerRadius="2">
                                <ScrollViewer
									VerticalScrollBarVisibility="Auto"
									BorderThickness="0"
									Padding="0"
                                            Margin="5,5,5,5"
                                            Style="{StaticResource EventDetailsScrollViewerStyle}"
											IsTabStop="False">
                                    <TextBlock Text="{TemplateBinding Details}"
							                   Foreground="{TemplateBinding Foreground}"
							                   TextWrapping="Wrap" />
                                </ScrollViewer>
                            </Border>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!--EventPoint-->
    <Style TargetType="local:EventPoint">
        <Setter Property="Width" Value="10" />
        <Setter Property="Stroke" Value="{StaticResource BaseColorBrush}"/>
        <Setter Property="Fill" Value="{StaticResource BaseBorderBrush}"/>
        <Setter Property="HollowFill" Value="{StaticResource SLColorFillBrush}"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:EventPoint">
                    <Grid Width="{TemplateBinding Width}" Height="{TemplateBinding Width}">
                        <Ellipse Fill="{TemplateBinding Fill}" Stroke="{TemplateBinding Stroke}" StrokeThickness="1"/>
                        <Ellipse Stroke="#66FFFFFF" Margin="1,1,1,1"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--EventSpan-->
    <Style TargetType="local:EventSpan">
        <Setter Property="MinWidth" Value="5" />
        <Setter Property="Stroke" Value="{StaticResource BaseColorBrush}"/>
        <Setter Property="Fill" Value="{StaticResource BaseBorderBrush}"/>
        <Setter Property="HollowFill" Value="{StaticResource SLColorFillBrush}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:EventSpan">
                    <Grid Margin="0,2,0,2">
                        <Rectangle RadiusX="5"
                                   RadiusY="5"
                                   Fill="{TemplateBinding Fill}"
                                   Stroke="{TemplateBinding Stroke}" 
                                   StrokeThickness="1" 
                                   Height="10" 
                                   VerticalAlignment="Top" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
