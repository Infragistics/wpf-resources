    <!-- *********************************  Dimensions  ********************************* -->
    <system:Double x:Key="TooltipBadgeWidth">8</system:Double>
    <system:Double x:Key="LegendItemBadgeWidth">12</system:Double>
    <system:Double x:Key="LegendItemBadgeHeight">12</system:Double>
    <system:Double x:Key="LegendItemBadgeWidthHalf">6</system:Double>
    <system:Double x:Key="LegendItemBadgeHeightHalf">6</system:Double>
    <system:Double x:Key="LineBadgeWidth">18</system:Double>
    <system:Double x:Key="LineNoBadgeWidthHeight">16</system:Double>
    <system:Double x:Key="LineBadgeHeight">16</system:Double>
    
    <!-- *********************************  Strokes  ********************************* -->
    <Thickness x:Key="TooltipBorderThickness">1</Thickness>
    <Thickness x:Key="LegendBorderThickness">0 0 0 0</Thickness>
    <CornerRadius x:Key="GeoMapCornerRadius">4</CornerRadius>
