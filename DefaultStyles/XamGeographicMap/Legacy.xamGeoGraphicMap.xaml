    <Style TargetType="charts:TileSeries" BasedOn="{StaticResource SeriesStyleWithBackgroundImage}">
        <Setter Property="LegendItemBadgeTemplate" Value="{StaticResource LegendItemPointBadgeTemplate}" />
        <Setter Property="ShapeFilterResolution" Value="1.0" />
    </Style>

</ResourceDictionary>
