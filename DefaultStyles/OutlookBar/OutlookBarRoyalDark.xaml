                            <Button x:Name="btnOK"
                                    Grid.Row="4"
                                    Grid.Column="0"
                                    Width="100"
                                    Margin="0,0,0,8"
                                    HorizontalAlignment="Right"
                                    Command="{x:Static igOutlookBar:NavigationPaneOptionsControlCommands.CommitChangesAndCloseCommand}"
