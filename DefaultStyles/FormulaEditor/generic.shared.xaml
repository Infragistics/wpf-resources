	                  xmlns:igPrim="http://schemas.infragistics.com/xaml/primitives"
	                  xmlns:igPrimLocal="http://schemas.infragistics.com/xaml/primitives"
	                  xmlns:sys="clr-namespace:System;assembly=mscorlib"
