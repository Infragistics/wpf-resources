                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="igRibbon:XamRibbon.IsActive" Value="False"/>
                                <Condition Property="igRibbon:RibbonGroup.IsInContextualTabGroup" Value="True"/>
                            </MultiTrigger.Conditions>
