    <!-- map scale pane -->

    <Style x:Key="ScalePrimaryStyle" TargetType="Path">
        <Setter Property="Stroke" Value="{StaticResource GenericBorderBrush}"/>
        <Setter Property="StrokeThickness" Value="1.8"/>
        <Setter Property="Fill">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0.0, 0.0" EndPoint="0.0, 1.0">
                    <GradientStop Color="#404040" Offset="0"/>
                    <GradientStop Color="#808080" Offset="0.5"/>
                    <GradientStop Color="#404040" Offset="1.0"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ScaleSecondaryStyle" TargetType="Path">
        <Setter Property="Stroke" Value="{StaticResource GenericBorderBrush}"/>
        <Setter Property="StrokeThickness" Value="1.8"/>
        <Setter Property="Fill">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0.0, 0.0" EndPoint="0.0, 1.0">
                    <GradientStop Color="#808080" Offset="0"/>
                    <GradientStop Color="#a0a0a0" Offset="0.5"/>
                    <GradientStop Color="#808080" Offset="1.0"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="local:MapScalePane">
        <Setter Property="DisplayMode" Value="Bar"/>
        <Setter Property="IsDisplaySubdivisions" Value="True"/>
        <Setter Property="CornerRadius" Value="2, 2"/>
        <Setter Property="PrimaryStyle" Value="{StaticResource ScalePrimaryStyle}"/>
        <Setter Property="SecondaryStyle" Value="{StaticResource ScaleSecondaryStyle}"/>
        <Setter Property="TextStyle" Value="{StaticResource TextStyle}"/>
        <Setter Property="TextShadowStyle" Value="{StaticResource ShadowTextStyle}"/>
        <Setter Property="ShadowOffset" Value="1.5, 1.5"/>
        <Setter Property="ShadowStyle" Value="{StaticResource ShadowStyle}"/>

        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderThickness" Value="1.8"/>
        <Setter Property="BorderBrush" Value="{StaticResource GenericBorderBrush}"/>
        <Setter Property="Padding" Value="3"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:MapScalePane">
                    <Grid Margin="{TemplateBinding Padding}">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0:0:1.0" Storyboard.TargetName="Background" Storyboard.TargetProperty="Opacity" To="0.4"/>
                                        <DoubleAnimation Duration="0:0:2.0" Storyboard.TargetName="Foreground" Storyboard.TargetProperty="Opacity" To="0.6"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0:0:0.4" Storyboard.TargetName="Background" Storyboard.TargetProperty="Opacity" To="1"/>
                                        <DoubleAnimation Duration="0:0:0.2" Storyboard.TargetName="Foreground" Storyboard.TargetProperty="Opacity" To="1"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <Border x:Name="Background" CornerRadius="4"
                                Background="{TemplateBinding Background}" Visibility="Collapsed"/>

                        <Border x:Name="Foreground" CornerRadius="4"
                                Background="{StaticResource GenericBackgroundGradient}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <Grid >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <ContentPresenter Grid.Row="0" Content="{TemplateBinding Content}"/>
                                <ContentPresenter Grid.Row="1" x:Name="RootElement"/>
                            </Grid>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>

    <!-- map colorswatch panel -->

    <Style x:Key="ColorSwatchSwatchStyle" TargetType="Path">
