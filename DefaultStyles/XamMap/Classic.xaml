        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderThickness" Value="1.8"/>
        <Setter Property="BorderBrush" Value="{StaticResource GenericBorderBrush}"/>
        <Setter Property="Padding" Value="3"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:MapColorSwatchPane">
                    <Grid Margin="{TemplateBinding Padding}">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0:0:1.0" Storyboard.TargetName="Background" Storyboard.TargetProperty="Opacity" To="0.4"/>
                                        <DoubleAnimation Duration="0:0:2.0" Storyboard.TargetName="Foreground" Storyboard.TargetProperty="Opacity" To="0.6"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0:0:0.4" Storyboard.TargetName="Background" Storyboard.TargetProperty="Opacity" To="1"/>
                                        <DoubleAnimation Duration="0:0:0.2" Storyboard.TargetName="Foreground" Storyboard.TargetProperty="Opacity" To="1"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <Border x:Name="Background" CornerRadius="4"
                                Background="{TemplateBinding Background}"/>

                        <Border x:Name="Foreground" CornerRadius="4"
                                Background="{StaticResource GenericBackgroundGradient}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <Grid >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <ContentPresenter Grid.Row="0" Content="{TemplateBinding Content}"/>
                                <ContentPresenter Grid.Row="1" x:Name="RootElement"/>
                            </Grid>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- map thumbnail pane -->

    <Style x:Key="ThumbnailWorldStyle" TargetType="Path">
        <Setter Property="Fill" Value="#7F8399A9"/>
        <Setter Property="Stroke" Value="#ffffffff"/>
        <Setter Property="StrokeThickness" Value="1"/>
    </Style>

    <Style x:Key="ThumbnailWindowStyle" TargetType="Path">
        <Setter Property="Fill" Value="#20000000"/>
        <Setter Property="Stroke" Value="{StaticResource GenericBorderBrush}"/>
        <Setter Property="StrokeThickness" Value="1"/>
    </Style>

    <Style TargetType="local:MapThumbnailPane">
        <Setter Property="WorldStyle" Value="{StaticResource ThumbnailWorldStyle}"/>
        <Setter Property="WindowStyle" Value="{StaticResource ThumbnailWindowStyle}"/>
        <Setter Property="PreviewStyle" Value="{StaticResource PreviewStyle}"/>

        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderThickness" Value="1.8"/>
        <Setter Property="BorderBrush" Value="{StaticResource GenericBorderBrush}"/>

        <Setter Property="Padding" Value="3"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:MapThumbnailPane">
                    <Grid x:Name="RootVisual" Margin="{TemplateBinding Padding}">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0:0:1.0" Storyboard.TargetName="BackgroundVisual" Storyboard.TargetProperty="Opacity" To="0.4"/>
                                        <DoubleAnimation Duration="0:0:0.2" Storyboard.TargetName="MouseOverVisual" Storyboard.TargetProperty="Opacity" To="0.0"/>
                                        <DoubleAnimation Duration="0:0:2.0" Storyboard.TargetName="RootElementVisual" Storyboard.TargetProperty="Opacity" To="0.8"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0:0:0.2" Storyboard.TargetName="BackgroundVisual" Storyboard.TargetProperty="Opacity" To="1"/>
                                        <DoubleAnimation Duration="0:0:1.0" Storyboard.TargetName="MouseOverVisual" Storyboard.TargetProperty="Opacity" To="1.0"/>
                                        <DoubleAnimation Duration="0:0:0.2" Storyboard.TargetName="RootElementVisual" Storyboard.TargetProperty="Opacity" To="1"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>

                            <VisualStateGroup x:Name="ActionStates">
                                <VisualState x:Name="Idle">
                                    <Storyboard>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Panning">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0:0:0.1" Storyboard.TargetName="PressedVisual" Storyboard.TargetProperty="Opacity" To="1.0"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>

                            <VisualStateGroup x:Name="FocusStates">
                                <VisualState x:Name="Focused">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0:0:0.2" Storyboard.TargetName="FocusVisual" Storyboard.TargetProperty="Opacity" To="1.0"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Unfocused">
                                    <Storyboard>
                                        <DoubleAnimation Duration="0:0:0.2" Storyboard.TargetName="FocusVisual" Storyboard.TargetProperty="Opacity" To="0.0"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <Grid x:Name="BackgroundVisual">
                            <Border CornerRadius="4"
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{StaticResource GenericBorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"/>
                            <Border x:Name="NormalVisual" CornerRadius="4"
                                Opacity="1"
                                Background="{StaticResource GenericBackgroundGradient}"
                                BorderThickness="{TemplateBinding BorderThickness}"/>
                            <Border x:Name="MouseOverVisual" CornerRadius="4"
                                Opacity="0"
                                Background="{StaticResource GenericMouseOverGradient}"
                                BorderThickness="{TemplateBinding BorderThickness}"/>
                            <Border x:Name="PressedVisual" CornerRadius="4"
                                Opacity="0" 
                                Background="{StaticResource GenericMouseOverGradient}"
                                BorderThickness="{TemplateBinding BorderThickness}"/>
                            <Border x:Name="FocusVisual" CornerRadius="4"
                                Opacity="0"
                                BorderThickness="{TemplateBinding BorderThickness}"/>
                        </Grid>

                        <Border x:Name="RootElementVisual"
                                Opacity="1" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <ContentPresenter Grid.Row="0" Content="{TemplateBinding Content}"/>
                                <ContentPresenter Grid.Row="1" x:Name="RootElement"/>
                            </Grid>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

